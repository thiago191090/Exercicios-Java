import java.util.Scanner;

import salario.Salario;

public class Main {

	public static void main(String[] args) {
		
		
		Scanner sc = new Scanner(System.in);
		
		Salario sal = new Salario();
		
		System.out.println("Digite o seu nome: ");
		sal.nome = sc.nextLine();
		
		System.out.printf("Digite o valor do seu salário: ");
		sal.valorSalario = sc.nextDouble();
		
		System.out.println("Digite o valor da taxa de imposto do salário: ");
		sal.imposto = sc.nextDouble();
		
		System.out.printf("Seu nome: " + sal.nome + ", e seu salário é: %0,2f" , sal.valorDesconto());
		
		System.out.println();
		
		System.out.println("Digite a porcentagem à acrescentar no salário: ");
		double proximoSalario = sc.nextDouble();
		sal.valorPorcTotal(proximoSalario);
		
		System.out.println(sal.valorSalario);
		
		sc.close();
	}

}
